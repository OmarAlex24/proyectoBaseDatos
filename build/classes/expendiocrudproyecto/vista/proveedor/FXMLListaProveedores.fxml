<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane id="AnchorPane" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="expendiocrudproyecto.controlador.proveedor.FXMLListaProveedoresController">
    <children>
        <VBox alignment="TOP_CENTER" layoutX="14.0" layoutY="14.0" prefHeight="572.0" prefWidth="772.0" spacing="15.0" AnchorPane.bottomAnchor="14.0" AnchorPane.leftAnchor="14.0" AnchorPane.rightAnchor="14.0" AnchorPane.topAnchor="14.0">
            <children>
                <Label text="Gestión de Proveedores" textFill="#185a9d">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <Label text="Buscar:">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <TextField fx:id="tfBusqueda" prefHeight="30.0" prefWidth="300.0" promptText="Razón social o teléfono">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </TextField>
                        <Button fx:id="btnBuscar" mnemonicParsing="false" prefHeight="30.0" prefWidth="100.0" style="-fx-background-color: #185a9d; -fx-text-fill: white;" text="Buscar">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Button>
                    </children>
                    <VBox.margin>
                        <Insets bottom="10.0" top="10.0" />
                    </VBox.margin>
                </HBox>
                <TableView fx:id="tvProveedores" prefHeight="400.0" prefWidth="772.0">
                    <columns>
                        <TableColumn fx:id="tcId" prefWidth="75.0" text="ID" />
                        <TableColumn fx:id="tcRazonSocial" prefWidth="200.0" text="Razón Social" />
                        <TableColumn fx:id="tcTelefono" prefWidth="120.0" text="Teléfono" />
                        <TableColumn fx:id="tcDireccion" prefWidth="150.0" text="Dirección" />
                        <TableColumn fx:id="tcCorreo" prefWidth="150.0" text="Correo" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
                <HBox alignment="CENTER" spacing="20.0">
                    <children>
                        <Button fx:id="btnAgregar" mnemonicParsing="false" prefHeight="40.0" prefWidth="120.0" style="-fx-background-color: #43cea2; -fx-text-fill: white; -fx-font-weight: bold;" text="Agregar">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Button>
                        <Button fx:id="btnEditar" mnemonicParsing="false" prefHeight="40.0" prefWidth="120.0" style="-fx-background-color: #185a9d; -fx-text-fill: white; -fx-font-weight: bold;" text="Editar">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Button>
                        <Button fx:id="btnEliminar" mnemonicParsing="false" prefHeight="40.0" prefWidth="120.0" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold;" text="Eliminar">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Button>
                        <Button fx:id="btnRegresar" mnemonicParsing="false" prefHeight="40.0" prefWidth="120.0" style="-fx-background-color: #7f8c8d; -fx-text-fill: white; -fx-font-weight: bold;" text="Regresar">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Button>
                    </children>
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>