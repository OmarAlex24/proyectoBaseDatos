<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="500" prefWidth="400" style="-fx-background-color: linear-gradient(to bottom right, #43cea2, #185a9d)" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.12" fx:controller="expendiocrudproyecto.controlador.FXMLInicioSesionController">
    <children>
        <VBox alignment="CENTER" layoutX="50" layoutY="60" prefHeight="380" prefWidth="300" spacing="20" style="-fx-background-color: rgba(255,255,255,0.95); -fx-background-radius: 20; -fx-effect: dropshadow(gaussian, #185a9d, 20, 0.3, 0, 4);">
            <children>
                <Label style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #185a9d;" text="Bienvenido" />
                <Label style="-fx-font-size: 14px; -fx-text-fill: #888;" text="Inicia sesión para continuar" />
            <VBox alignment="CENTER" fillWidth="false" prefHeight="200.0" prefWidth="100.0" spacing="20.0" VBox.vgrow="ALWAYS">
               <children>
      
                      <HBox alignment="CENTER_LEFT" spacing="10">
                          <ImageView fitHeight="24" fitWidth="24">
                              <image>
                                  <Image url="@../recursos/user_icon.png" />
                              </image>
                          </ImageView>
                          <TextField fx:id="txtUsuario" promptText="Usuario" style="-fx-background-radius: 10;" />
                      </HBox>
      
                      <HBox alignment="CENTER_LEFT" spacing="10">
                          <ImageView fitHeight="24" fitWidth="24">
                              <image>
                                  <Image url="@../recursos/lock_icon.png" />
                              </image>
                          </ImageView>
                          <PasswordField fx:id="txtContrasenia" promptText="Contraseña" style="-fx-background-radius: 10;" />
                      </HBox>
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </VBox>

                <Button fx:id="btnLogin" style="-fx-background-color: linear-gradient(to right, #43cea2, #185a9d); -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 10; -fx-font-weight: bold; -fx-cursor: hand;" text="Iniciar Sesión" />

                <Label fx:id="lblError" style="-fx-text-fill: #e74c3c; -fx-font-size: 13px;" text="" visible="false" />
            </children>
            <padding>
                <Insets bottom="40" left="30" right="30" top="40" />
            </padding>
        </VBox>
    </children>
</AnchorPane>
