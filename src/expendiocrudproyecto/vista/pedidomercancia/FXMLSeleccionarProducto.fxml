<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="expendiocrudproyecto.controlador.pedidomercancia.FXMLSeleccionarProductoController">
   <children>
      <VBox spacing="10.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
         <children>
            <TableView fx:id="tvProductos" prefHeight="400.0">
               <columns>
                  <TableColumn fx:id="tcNombre" prefWidth="300.0" text="Nombre" />
                  <TableColumn fx:id="tcPrecio" prefWidth="150.0" text="Precio" />
                  <TableColumn fx:id="tcStock" prefWidth="150.0" text="Stock" />
               </columns>
            </TableView>
            <HBox alignment="CENTER_RIGHT" spacing="10.0">
               <children>
                  <Button fx:id="btnAgregar" mnemonicParsing="false" text="Agregar" onAction="#agregar" />
                  <Button fx:id="btnCancelar" mnemonicParsing="false" text="Cancelar" onAction="#cancelar" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane> 